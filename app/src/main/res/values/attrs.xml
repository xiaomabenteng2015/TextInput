<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义密码框-->
    <declare-styleable name="PassWordLayoutStyle">
        <attr name="box_input_color" format="color|reference"></attr>//输入框输入状态颜色
        <attr name="box_no_input_color" format="color|reference"></attr>//输入框未输入状态颜色
        <attr name="interval_width" format="dimension|reference"></attr>//间隔
        <attr name="item_width" format="dimension|reference"></attr>//子View宽
        <attr name="item_height" format="dimension|reference"></attr>//子View高
        <attr name="item_height_changable" format="boolean"></attr>//子View高度使用自定义,不受父布局影响（当且仅当父布局高度为包裹内容时）
        <attr name="text_input_color" format="color|reference"></attr>//文本颜色
        <attr name="draw_txt_size" format="dimension|reference"></attr>//文本大小
        <attr name="input_text_enable" format="boolean"></attr>//是否允许输入文字（默认只输入数字）
        <attr name="input_line_color" format="color|reference"></attr>//输入线颜色
        <attr name="draw_box_line_size" format="dimension|reference"></attr>//输入线条大小
        <attr name="is_show_input_line" format="boolean"></attr>//是否显示输入线
        <attr name="pass_inputed_type">//密码输入显示内容(即展示形式：密文、明文)
            <flag name="stars" value="0" />//密文：*
            <flag name="circle" value="1" />//密文：.
            <flag name="text" value="2" />//明文
        </attr>
        <attr name="box_draw_type">//密码框形状
            <flag name="rect" value="0" />
            <flag name="circle" value="1" />
            <flag name="line" value="2" />
        </attr>
        <attr name="pass_leng">//密码长度 布局文件中可设置 4 6 8 16 代码中可动态配置
            <flag name="four" value="4" />
            <flag name="six" value="6" />
            <flag name="eight" value="8" />
            <flag name="sixteen" value="16" />
        </attr>
    </declare-styleable>



</resources>